{
  "schemaVersion": 1,
  "id": "mccourse",
  "version": "${version}",

  "name": "MCCourse Fabric Mod",
  "description": "A Mod to teach others Fabric Minecraft Modding",
  "authors": [
    "adam"
  ],
  "contact": {
    "homepage": "https://adam.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.adam.mccourse.MCCourseMod"
    ],
    "client": [
      "net.adam.mccourse.MCCourseClient"
    ]
  },
  "mixins": [
    "mccourse.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
